{
  "name": "graaphics",
  "productName": "Graaphics",
  "version": "0.1.16",
  "description": "Application for production of AAP visual media",
  "main": "main.js",
  "author": "Sean Fitzpatrick",
  "license": "MIT",
  "repository": "https://github.com/blookhaven/graaphics",
  "keywords": [
    "graphics",
    "AAP",
    "static",
    "visual",
    "explainer"
  ],
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "publish-mac": "build --mac -p always",
    "publish-win": "build --win -p always",
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "^5.0.0",
    "electron-builder": "^20.41.0",
    "electron-rebuild": "^1.8.6"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-spellchecker": "^2.2.1",
    "electron-tabs": "^0.9.5",
    "electron-updater": "^4.0.6",
    "ftp": "^0.3.10",
    "google-maps": "^3.3.0",
    "jquery": "^3.4.1",
    "os": "^0.1.1",
    "temp": "^0.9.0",
    "wordcount": "^1.1.1"
  },
  "build": {
    "appId": "com.aap.graaphics",
    "publish": [
      {
        "provider": "github",
        "owner": "Blookhaven",
        "repo": "graaphics"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true
  }
}
